{% extends "form_content_base.html.twig" %}

{% block title %}{{ "login.title"|trans }}{% endblock %}
{% block description %}{{ "login.description"|trans }}{% endblock %}

{% trans_default_domain "login" %}

{% block form_content %}
    {{ form_start(form, {"action" : path("login_check")}) }}
    {{ form_errors(form) }}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {{ form_end(form) }}

    {% if error_occurred %}
        <p>{{ "login.forgot_password"|trans }}</p>
    {% endif %}
{% endblock %}