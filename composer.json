{
  "name": "the-alternative-zurich/feedback",
  "description": "collect feedback from lectures & workshop with minimal setup & instant evaulation ",
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "doctrine/doctrine-fixtures-bundle": "^3.0",
    "ramsey/uuid": "^3",
    "sensio/framework-extra-bundle": "^5.1",
    "sensiolabs/security-checker": "^5.0",
    "symfony/apache-pack": "^1.0",
    "symfony/asset": "^4.1",
    "symfony/console": "^4.1",
    "symfony/dependency-injection": "^4.1",
    "symfony/dotenv": "^4.2",
    "symfony/expression-language": "^4.1",
    "symfony/flex": "^1.0",
    "symfony/form": "^4.1",
    "symfony/framework-bundle": "^4.1",
    "symfony/maker-bundle": "^1.4",
    "symfony/monolog-bundle": "^3.1",
    "symfony/orm-pack": "^1.0",
    "symfony/property-info": "^4.1",
    "symfony/requirements-checker": "^1.0",
    "symfony/security-bundle": "^4.1",
    "symfony/serializer": "^4.1",
    "symfony/swiftmailer-bundle": "^3.1",
    "symfony/translation": "^4.1",
    "symfony/twig-bundle": "^4.1",
    "symfony/validator": "^4.1",
    "symfony/webpack-encore-bundle": "^1.0",
    "symfony/yaml": "^4.1"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.6",
    "deployer/deployer": "^6.1",
    "friendsofphp/php-cs-fixer": "^2.7",
    "fzaninotto/faker": "^1.7",
    "php-coveralls/php-coveralls": "^2.0",
    "symfony/browser-kit": "^4.1",
    "symfony/css-selector": "^4.1",
    "symfony/debug-bundle": "^4.1",
    "symfony/phpunit-bridge": "^4.1",
    "symfony/profiler-pack": "^1.0",
    "symfony/web-server-bundle": "^4.1"
  },
  "config": {
    "platform": {
      "php": "7.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "configure-environment": [
      "cp -n .env .env.local",
      "cp -n .php_cs.dist .php_cs",
      "cp -n phpunit.xml.dist phpunit.xml",
      "cp -n servers.yml.dist servers.yml"
    ],
    "prepare-environment": [
      "vendor/bin/cghooks update",
      "vendor/bin/requirements-checker",
      "php bin/console security:check",
      "php bin/console doctrine:migrations:migrate -q",
      "php bin/console doctrine:fixtures:load -q"
    ],
    "pre-install-cmd": "@configure-environment",
    "post-install-cmd": "@prepare-environment",
    "pre-update-cmd": "@configure-environment",
    "post-update-cmd": "@prepare-environment"
  },
  "extra": {
    "projectTitle": "mangelio/web",
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "./vendor/bin/php-cs-fixer fix  --config=.php_cs",
        "git update-index --again"
      ],
      "post-merge": "composer install"
    }
  }
}
